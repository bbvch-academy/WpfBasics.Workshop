<UserControl x:Class="MySbbInfo.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             lex:ResxLocalizationProvider.DefaultAssembly="MySbbInfo"
             lex:ResxLocalizationProvider.DefaultDictionary="Translation"
             mc:Ignorable="d">
    <Menu>
        <MenuItem Header="{lex:Loc SettingsItem}">
            <MenuItem Header="{lex:Loc LanguageItem}">
                <MenuItem x:Name="ChangeToGermanItem"
                          Click="ChangeToGermanItem_OnClick"
                          Header="_Deutsch"
                          IsCheckable="True" />
                <MenuItem x:Name="ChangeToEnglishItem"
                          Click="ChangeToEnglishItem_OnClick"
                          Header="_English"
                          IsCheckable="True" />
                <MenuItem x:Name="ChangeToFrenchItem"
                          Click="ChangeToFrenchItem_OnClick"
                          Header="_Française"
                          IsCheckable="True" />
            </MenuItem>
        </MenuItem>
    </Menu>
</UserControl>
